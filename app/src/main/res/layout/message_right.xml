<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="New Text"
            android:id="@+id/dateSeparator"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#595958"
            android:background="@drawable/date_background"
            android:visibility="gone"/>


        <RelativeLayout
            android:id="@+id/msg_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
             android:background="@drawable/purple_bubble"
            android:padding="12dp"
            android:layout_below="@+id/dateSeparator">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="Hello"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </RelativeLayout>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_bubble"
            android:layout_alignParentRight="true"
            android:paddingBottom="6dp"
            android:paddingRight="20dp"
            android:text="18-10-15"
            android:textColor="@color/primary_color"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>