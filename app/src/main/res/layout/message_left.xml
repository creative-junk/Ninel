<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/msg_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/dateSeparator"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/date_background"
            android:gravity="center"
            android:padding="4dp"
            android:text="New Text"
            android:textAllCaps="false"
            android:textColor="#595958"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/msg_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dateSeparator"
            android:background="@drawable/grey_bubble"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_bubble"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="2dp"
            android:text="18-10-15"
            android:textColor="@color/primary_color"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>